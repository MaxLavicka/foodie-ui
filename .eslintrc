{
  "extends": "airbnb",
  "rules": {
    "func-names": ["error", "never"],
    "no-console": 0,
    "no-plusplus": 0,
    "consistent-return": 0,
    "radix": 0,
    "function-paren-newline": ["error", "consistent"],
    "linebreak-style": 0,
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to", "hrefLeft", "hrefRight" ],
      "aspects": [ "noHref", "invalidHref", "preferButton" ]
    }],
    "react/forbid-prop-types": [
      true,
      {
        "forbid": ["array", "any"]
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  }
}
